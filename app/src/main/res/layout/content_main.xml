<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.test.foursquare.MainActivity">

    <Button
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/num1"
        android:contextClickable="false"
        android:clickable="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="35dp"
        android:textSize="80dp"
        android:layout_above="@+id/num3"
        android:layout_toStartOf="@+id/num4" />

    <Button
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/num2"
        android:clickable="true"
        android:layout_above="@+id/num4"
        android:textSize="80dp"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/num3"
        android:clickable="true"
        android:layout_marginLeft="45dp"
        android:textSize="80dp"
        android:layout_alignTop="@+id/num4"/>

    <Button
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/num4"
        android:clickable="true"
        android:layout_marginBottom="40dp"
        android:textSize="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Operation"
        android:textSize="30dp"
        android:textAlignment="textStart"
        android:layout_marginLeft="0dp"
        android:id="@+id/operation"
        android:layout_alignTop="@+id/target"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dp"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="180dp"
        android:text="Target Value"
        android:id="@+id/target" />
    <TextView
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/right"
        android:background="#1fdf12"
        android:layout_marginLeft="0dp"
        android:text="0"
        android:textSize="100dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/wrong"
        android:textAlignment="center"
        android:background="#e20b20"
        android:text="0"
        android:textSize="100dp"
        android:layout_marginLeft="230dp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/textView"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="181dp"
        android:layout_below="@+id/target" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORE"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="101dp"
        android:layout_marginTop="42dp"
        android:minHeight="100dp"
        android:minWidth="180dp"
        android:textSize="25dp"
        android:textAlignment="center"
        android:nestedScrollingEnabled="false"
        android:textColor="#000000" />

</RelativeLayout>
